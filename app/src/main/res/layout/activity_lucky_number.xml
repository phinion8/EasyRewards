<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_color"
    android:fillViewport="true"
    tools:context=".LuckyNumberActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/back_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/account_form_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_btn4">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_primary_color"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41000003">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/number_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <android.widget.Button
                    android:id="@+id/button1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <android.widget.Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="2"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <android.widget.Button
                    android:id="@+id/button3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="3"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <android.widget.Button
                    android:id="@+id/button4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="4"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="3"
                    app:layout_row="0" />

                <android.widget.Button
                    android:id="@+id/button5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="5"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <android.widget.Button
                    android:id="@+id/button6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="6"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="1"
                    app:layout_row="1" />

                <android.widget.Button
                    android:id="@+id/button7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:tag="7"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_column="2"
                    app:layout_row="1" />

                <android.widget.Button
                    android:id="@+id/button8"
